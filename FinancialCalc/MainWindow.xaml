<Window x:Class="FinancialCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinancialCalc"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="Financial Calc 1.0"
        Height="Auto"
        Width="Auto"
        MaxWidth="500">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button
                x:Name="AddButton"
                Grid.Row="0"
                Grid.Column="0"
                Width="50"
                Height="25"
                Margin="5"
                Content="Add">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding OnAddCommand}"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Button>
            <Button
                x:Name="ModifyButton"
                Grid.Row="0"
                Grid.Column="1"
                Width="50"
                Height="25"
                Margin="5"
                Content="Modify">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding OnModifyCommand}"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Button>
            <Button
                x:Name="DeleteButton"
                Grid.Row="0"
                Grid.Column="2"
                Width="50"
                Height="25"
                Margin="5"
                Content="Delete">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding OnDeleteCommand}"
                                               CommandParameter="{Binding SelectedProduct}"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Button>
            <Button
                x:Name="SaveButton"
                Grid.Row="0"
                Grid.Column="3"
                Width="50"
                Height="25"
                Margin="5"
                Content="Save">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding OnSaveCommand}"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Button>
            <Button
                x:Name="LoadButton"
                Grid.Row="0"
                Grid.Column="4"
                Width="50"
                Height="25"
                Margin="5"
                Content="Load">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding OnLoadCommand}"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Button>
        </Grid>
        <DataGrid
            x:Name="DataGrid"
            Grid.Row="1"
            Grid.Column="0"
            RowHeight="25"
            SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
            ItemsSource="{Binding Products}"
            VerticalAlignment="Stretch"
            CanUserAddRows="False"
            SelectionMode="Single"
            CanUserSortColumns="True"
            AutoGenerateColumns="False"
            VerticalScrollBarVisibility="Auto"
            MinHeight="250">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <DataGridTextColumn.ElementStyle>
                        <StaticResource ResourceKey="TextBlockCenteredStyle"/>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock
                                    Background="White"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    VerticalAlignment="Center"
                                    Text="Name"/>
                                <TextBlock
                                    Background="White"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Text="[-]"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding VatRateType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <DataGridTextColumn.ElementStyle>
                        <StaticResource ResourceKey="TextBlockCenteredStyle"/>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock
                                     Background="White"
                                     FontWeight="Bold"
                                     Foreground="Black"
                                     VerticalAlignment="Center"
                                     Text="Vat Rate"/>
                                <TextBlock
                                     Background="White"
                                     FontWeight="Bold"
                                     Foreground="Black"
                                     VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                     Text="[%]"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding CostGross, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    <DataGridTextColumn.ElementStyle>
                        <StaticResource ResourceKey="TextBlockCenteredStyle"/>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock
                                    Background="White"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    VerticalAlignment="Center"
                                    Text="Cost (Gross)"/>
                                <TextBlock
                                    Background="White"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Text="[PLN]"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding CostNet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <DataGridTextColumn.ElementStyle>
                        <StaticResource ResourceKey="TextBlockCenteredStyle"/>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock
                                    Background="White"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    VerticalAlignment="Center"
                                    Text="Cost (Net)"/>
                                <TextBlock
                                    Background="White"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Text="[PLN]"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StatusBar Grid.Row="2" Background="{StaticResource HeaderBackgroundBrush}">
            <StatusBarItem FontSize="14">
                <TextBlock Text="{Binding StatusBarMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
